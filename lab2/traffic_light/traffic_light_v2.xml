			<formula>A[] not deadlock
			</formula>
			<comment>
			</comment>
		</query>
		<query>
			<formula>A[] not ((TL0.green or TL1.green) and (TL2.green or TL3.green))
			</formula>
			<comment>
			</comment>
		</query>
		<query>
			<formula>TL0.unhandled_vehicle2 --&gt; TL0.green
			</formula>
			<comment>
			</comment>
		</query>
		<query>
			<formula>E&lt;&gt; TL0.green and TL1.green
			</formula>
			<comment>
			</comment>
		</query>
		<query>
			<formula>E&lt;&gt; TL0.green and (not TL1.green)
			</formula>
			<comment>
			</comment>
		</query>
		<query>
			<formula>TL0.unhandled_vehicle1 --&gt; TL0.green
			</formula>
			<comment>
			</comment>
		</query>
	</queries>
