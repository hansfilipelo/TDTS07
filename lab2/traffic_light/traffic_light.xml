			<label kind="assignment" x="153" y="-153">ack[1] = false</label>
			<nail x="136" y="-221"/>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id7"/>
			<label kind="guard" x="-629" y="-221">not (request[0][0] or
request[0][1] or
request[1][0] or
request[1][1])</label>
			<label kind="assignment" x="-629" y="-153">ack[0] = false</label>
			<nail x="-476" y="0"/>
			<nail x="-476" y="-221"/>
		</transition>
		<transition>
			<source ref="id6"/>
			<target ref="id5"/>
			<label kind="guard" x="-246" y="102">(request[0][0] or 
request[0][1]) and
time == time_limit</label>
			<label kind="assignment" x="-246" y="153">ack[1] = false,
ack[0] = true,
time = 0</label>
			<nail x="-187" y="93"/>
		</transition>
		<transition>
			<source ref="id5"/>
			<target ref="id6"/>
			<label kind="guard" x="-246" y="-136">(request[1][0] or 
request[1][1]) and
time == time_limit</label>
			<label kind="assignment" x="-246" y="-85">ack[0] = false,
ack[1] = true,
time = 0</label>
			<nail x="-187" y="-34"/>
		</transition>
