			<target ref="id4"/>
			<nail x="-2686" y="-2142"/>
		</transition>
		<transition>
			<source ref="id4"/>
			<target ref="id3"/>
			<label kind="synchronisation" x="-2720" y="-2235">s_on[id]!</label>
			<nail x="-2686" y="-2210"/>
		</transition>
	</template>
	<template>
