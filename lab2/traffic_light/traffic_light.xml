		<location id="id6" x="136" y="25">
			<name x="126" y="-9">AckWE</name>
			<label kind="invariant" x="153" y="8">time &lt; time_limit</label>
		</location>
		<location id="id7" x="-178" y="-221">
			<name x="-188" y="-255">NoAck</name>
		</location>
		<init ref="id7"/>
		<transition>
			<source ref="id5"/>
			<target ref="id5"/>
			<label kind="guard" x="-697" y="59">(request[0][0] or 
request[0][1]) and
not (request[1][0] or 
request[1][1]) and
time == time_limit</label>
			<label kind="assignment" x="-697" y="144">time = 0</label>
			<nail x="-612" y="25"/>
			<nail x="-476" y="153"/>
		</transition>
		<transition>
			<source ref="id6"/>
